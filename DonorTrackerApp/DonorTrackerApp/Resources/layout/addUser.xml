<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Add New Donor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Field to enter new User Name -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/newUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>


        <!-- Field to enter new Phone Number -->
         <android.support.design.widget.TextInputLayout
            android:id="@+id/newPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>


        <!-- Field to enter new Email -->
         <android.support.design.widget.TextInputLayout
            android:id="@+id/newEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>


        <!-- Field to enter new City -->
         <android.support.design.widget.TextInputLayout
            android:id="@+id/newCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="text"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>


        <!-- Field to enter new Country -->
         <android.support.design.widget.TextInputLayout
            android:id="@+id/newCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:inputType="text"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>

        
        <!-- Field to select Blood Type -->
        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/bloodTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ms_hint="Select Blood Type"
            app:ms_enableFloatingLabel="true"
            app:ms_floatingLabelText="Blood Type"/>


        <Button
            android:id="@+id/addButton"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Add"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/roundbutton"/>

    </LinearLayout>

</LinearLayout>
